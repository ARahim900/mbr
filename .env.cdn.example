# CDN Deployment Configuration
# Copy this file to .env and configure your CDN settings

# Primary CDN Provider (netlify, cloudflare, cloudfront, fastly, vercel)
CDN_PROVIDER=netlify

# Domain Configuration
DOMAIN=your-domain.com
CUSTOM_DOMAINS=your-domain.com,www.your-domain.com

# Build Configuration
BUILD_COMMAND=npm run build:production
BUILD_DIR=dist
NODE_ENV=production

# Deployment Options
DRY_RUN=false
FORCE_DEPLOY=false

# Security Configuration
ENABLE_SECURITY_SCAN=true
SECURITY_THRESHOLD=70

# Performance Monitoring
ENABLE_MONITORING=true
MONITORING_INTERVAL=300000

# Fallback Configuration
ENABLE_FALLBACK=true
FALLBACK_PROVIDER=netlify

# Alerting & Notifications
WEBHOOK_URL=https://hooks.slack.com/your-webhook
SLACK_CHANNEL=#alerts

# Feature Flags
ENABLE_COMPRESSION=true
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_HTTP2=true
ENABLE_BROTLI=true

# === Provider-Specific Settings ===

# Netlify (Optional - can work without for public repos)
# NETLIFY_AUTH_TOKEN=your_netlify_token
# NETLIFY_SITE_ID=your_site_id

# Cloudflare
# CLOUDFLARE_API_TOKEN=your_cloudflare_token
# CLOUDFLARE_ZONE_ID=your_zone_id
# CLOUDFLARE_ACCOUNT_ID=your_account_id

# CloudFront (AWS)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-s3-bucket
# CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id

# Fastly
# FASTLY_API_TOKEN=your_fastly_token
# FASTLY_SERVICE_ID=your_service_id

# Vercel
# VERCEL_TOKEN=your_vercel_token
# VERCEL_PROJECT_ID=your_project_id
# VERCEL_TEAM_ID=your_team_id

# === Additional Security Settings ===

# Content Security Policy Origins (comma-separated)
ALLOWED_ORIGINS=*
CSP_SCRIPT_SRC='self','unsafe-inline','unsafe-eval',https://cdn.jsdelivr.net
CSP_STYLE_SRC='self','unsafe-inline',https://fonts.googleapis.com

# SSL/TLS Configuration
SSL_CERTIFICATE_ARN=arn:aws:acm:us-east-1:account:certificate/cert-id
MIN_TLS_VERSION=1.2

# === Performance Thresholds ===

# Response time threshold in milliseconds
RESPONSE_TIME_THRESHOLD=2000

# Availability threshold in percentage
AVAILABILITY_THRESHOLD=99.0

# Error rate threshold in percentage
ERROR_RATE_THRESHOLD=5.0

# Cache hit ratio threshold in percentage
CACHE_HIT_THRESHOLD=70.0

# === Testing Configuration ===

# Domain for testing (can be different from production)
TEST_DOMAIN=staging.your-domain.com

# Test URLs (comma-separated)
TEST_URLS=/,/dashboard,/reports,/assets/app.js,/assets/app.css

# Load testing configuration
LOAD_TEST_CONCURRENT_REQUESTS=20
LOAD_TEST_DURATION=60000

# Geographic testing regions (comma-separated)
TEST_REGIONS=us-east-1,eu-west-1,ap-southeast-1